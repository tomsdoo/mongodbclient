{
  "name": "@tomsd/mongodbclient",
  "version": "4.2.1",
  "description": "It's a handy mongodb client for easy-use.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/mongodbclient.d.ts",
      "import": "./dist/mongodbclient.esm.js",
      "require": "./dist/mongodbclient.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome check",
    "prepare": "husky",
    "start-db": "docker compose up -d",
    "stop-db": "docker compose down",
    "serve:doc": "mdbook --serve --directory docs",
    "test": "vitest --project node",
    "test:local": "vitest --project local"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "biome check"
    ]
  },
  "keywords": [
    "mongodb"
  ],
  "author": "tom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomsdoo/mongodbclient"
  },
  "dependencies": {
    "mongodb": "6.18.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@tomsd/md-book": "2.0.2",
    "@types/node": "24.3.0",
    "@types/uuid": "10.0.0",
    "dotenv": "17.2.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
