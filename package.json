{
  "name": "@tomsd/mongodbclient",
  "version": "3.0.12",
  "description": "It's a handy mongodb client for easy-use.",
  "main": "dist/mongodbclient.cjs.js",
  "module": "dist/mongodbclient.esm.js",
  "types": "dist/esm/mongodbclient.d.ts",
  "scripts": {
    "build": "tsup && tsc --project tsconfig.esm.json",
    "format": "npm run format:src && npm run format:test",
    "format:document": "prettier --write docs/**/*.html",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "prepare": "husky install",
    "serve:doc": "mdbook --serve --directory docs",
    "test": "vitest"
  },
  "lint-staged": {
    "docs/**/*.html": [
      "npm run format:document"
    ],
    "src/**/*.ts": [
      "npm run lint:src",
      "npm run format:src"
    ],
    "test/**/*.ts": [
      "npm run lint:test",
      "npm run format:test"
    ]
  },
  "keywords": [
    "mongodb"
  ],
  "author": "tom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomsdoo/mongodbclient"
  },
  "dependencies": {
    "mongodb": "4.7.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@tomsd/md-book": "0.16.0",
    "@types/node": "20.12.12",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "dotenv": "16.4.5",
    "eslint": "8.56.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-node": "10.8.1",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
