{
  "name": "@tomsd/mongodbclient",
  "version": "4.1.6",
  "description": "It's a handy mongodb client for easy-use.",
  "exports": {
    ".": {
      "types": "./dist/mongodbclient.d.ts",
      "import": "./dist/mongodbclient.esm.js",
      "require": "./dist/mongodbclient.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome check",
    "prepare": "husky",
    "start-db": "docker compose up -d",
    "stop-db": "docker compose down",
    "serve:doc": "mdbook --serve --directory docs",
    "test": "vitest --project node",
    "test:local": "vitest --project local"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "biome check"
    ]
  },
  "keywords": [
    "mongodb"
  ],
  "author": "tom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomsdoo/mongodbclient"
  },
  "dependencies": {
    "mongodb": "6.15.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tomsd/md-book": "1.3.6",
    "@types/node": "22.15.3",
    "@types/uuid": "10.0.0",
    "dotenv": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  }
}
