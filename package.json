{
  "name": "@tomsd/mongodbclient",
  "version": "4.4.0",
  "description": "It's a handy mongodb client for easy-use.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/mongodbclient.d.ts",
      "import": "./dist/mongodbclient.esm.js",
      "require": "./dist/mongodbclient.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome check",
    "prepare": "husky",
    "start-db": "docker compose up -d",
    "stop-db": "docker compose down",
    "serve:doc": "mdbook --serve --directory docs",
    "test": "vitest --project node",
    "test:local": "vitest --project local"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "biome check"
    ]
  },
  "keywords": [
    "mongodb"
  ],
  "author": "tom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomsdoo/mongodbclient"
  },
  "dependencies": {
    "mongodb": "7.0.0",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tomsd/md-book": "2.0.6",
    "@types/node": "24.10.1",
    "@types/uuid": "11.0.0",
    "dotenv": "17.2.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.14"
  }
}
